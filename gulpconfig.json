{
  "base": {
    "desc": "基础任务",
    "task": [
      {
        "name": "base-dist-js",
        "desc": "把第三方依赖包复制到构建后的文件夹里面",
        "funcName": "gulpBaseDistJs"
      },
      {
        "name": "base-js",
        "desc": "把不需要打包的依赖包，复制到构建后的文件夹里面",
        "deps": ["base-dist-js"],
        "funcName": "gulpBaseJs"
      },
      {
        "name": "build-img",
        "desc": "构建图片",
        "funcName": "gulpBuildImg"
      },
      {
        "name": "build-pug",
        "desc": "构建pug",
        "funcName": "gulpBuildPug"
      },
      {
        "name": "build-server-pug",
        "desc": "构建服务端渲染pug",
        "deps": ["build-common-pug"],
        "funcName": "gulpBuildServerPug"
      },
      {
        "name": "build-common-pug",
        "desc": "构建公共pug文件",
        "funcName": "gulpBuildCommonPug"
      },
      {
        "name": "build-html",
        "desc": "构建html",
        "funcName": ""
      },
      {
        "name": "webpack-js",
        "desc": "将webpack打包的js文件转移并替换引用路径({{{}}}及{{#{}}})",
        "funcName": "gulpWebpackJs"
      },
      {
        "name": "build-npm-file",
        "desc": "js中引用第三方组件库，组件库里面的资源，打包出来",
        "funcName": "gulpBuildNpmFile"
      },
      {
        "name": "webpack-css",
        "desc": "将webpack打包的css文件转移并替换引用路径({{{}}}及{{#{}}})",
        "funcName": "gulpWebpackCss"
      },
      {
        "name": "serve",
        "desc": "测试服务",
        "deps": [
          "webpack-js",
          "base-js",
          "build-html",
          "build-pug",
          "build-server-pug",
          "build-img"
        ],
        "funcName": "gulpServe"
      }
    ]
  },
  "dev": {
    "desc": "本地测试服务",
    "task": [
      {
        "name": "dev",
        "desc": "设置环境变量，监测文件改动并刷新页面",
        "deps": ["serve"],
        "funcName": "gulpDev"
      }
    ]
  },
  "release": {
    "desc": "打包任务",
    "task": [
      {
        "name": "release-js",
        "desc": "压缩js文件",
        "deps": [
          "webpack-js",
          "webpack-css",
          "build-npm-file",
          "base-js",
          "build-img",
          "build-html",
          "build-pug",
          "build-server-pug",
          "build-common-pug"
        ],
        "funcName": "gulpReleaseJs"
      },
      {
        "name": "release-rev",
        "deps": ["release-js"],
        "funcName": "gulpReleaseRev"
      },
      {
        "name": "css-js-replace",
        "deps": ["release-rev"],
        "funcName": "gulpCssJsReplace"
      },
      {
        "name": "html-replace",
        "deps": ["css-js-replace"],
        "funcName": "gulpHtmlReplace"
      },
      {
        "name": "set-release",
        "funcName": "gulpSetRelease"
      },
      {
        "name": "release",
        "deps": ["set-release", "html-replace"],
        "funcName": "gulpRelease"
      }
    ]
  },
  "clean": {
    "desc": "清除静态资源文件夹",
    "task": [
      {
        "name": "clean",
        "funcName": "gulpClean"
      }
    ]
  },
  "clean_dist": {
    "desc": "清除上传七牛的静态资源文件",
    "path": "clean.js",
    "task": [
      {
        "name": "clean_dist",
        "funcName": "gulpCleanDist"
      }
    ]
  },
  "eslint": {
    "desc": "代码格式检测",
    "task": [
      {
        "name": "eslint",
        "funcName": "gulpEslint"
      }
    ]
  }
}
